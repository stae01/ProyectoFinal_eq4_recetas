<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoPantallas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Imagen receta centrada -->
                    <ImageView
                        android:id="@+id/imgReceta"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder" />

                    <!-- Nombre centrado -->
                    <TextView
                        android:id="@+id/tvNombreReceta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="Ramen AKai"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- Descripción centrada -->
                    <TextView
                        android:id="@+id/tvDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Descripción de la receta"
                        android:textColor="@color/orange"
                        android:textSize="15sp" />
                </LinearLayout>


            <!-- Corazón sobrepuesto arriba a la izquierda -->
            <ImageView
                android:id="@+id/favorite_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"
                android:src="@drawable/ic_corazon"
                app:tint="@color/orange"
                android:background="@android:color/transparent"
                android:contentDescription="Descripcion" />

                <!-- editar y eliminar sobrepuesto arriba a la izquierda -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:id="@+id/btnEditar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="Editar receta"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/btnEliminar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_eliminar"
                        android:contentDescription="Eliminar receta"
                        android:visibility="gone"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        <!-- Card de ingredientes -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardIngredientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingredientes"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginBottom="7dp"/>

                <TextView
                    android:id="@+id/tvIngredientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- 1 huevo\n- Champiñón\n- Zanahoria\n- 1 tz de arroz"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPreparacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preparación"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginBottom="7dp"/>

                <TextView
                    android:id="@+id/tvPreparacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Cocina el arroz\n2. Mientras tanto corta las verduras\n3. Cocina un huevo estrellado\n4. Monta el arroz, después las verduras arriba"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardExtras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="13dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detalles extra"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tvTiempo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⏱ Tiempo: 45 min"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:id="@+id/tvCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Categoría: Sopas"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:id="@+id/tvEtiquetas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Etiquetas: saludable, vegano"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:id="@+id/tvLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ver link: https://youtube.com/..."
                    android:textSize="15sp"
                    android:textColor="@color/orange"
                    android:autoLink="web"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
