<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    android:id="@+id/cardComida"
    app:cardElevation="2dp"
    android:backgroundTint="@color/white">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:padding="16dp">

<!-- Food Image -->
<androidx.cardview.widget.CardView
    android:layout_width="80dp"
    android:layout_height="80dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <ImageView
        android:id="@+id/comida_imagen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

</androidx.cardview.widget.CardView>

<!-- Food Details -->
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <TextView
        android:id="@+id/comida_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ramen AKai"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/comida_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asiatica"
        android:textStyle="bold"
        android:textSize="8sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        android:backgroundTint="@color/orange">

        <TextView
            android:id="@+id/comida_etiqueta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saludable"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:fontFamily="sans-serif-medium" />

    </androidx.cardview.widget.CardView>

</LinearLayout>

<!-- Heart Icon -->
<ImageView
    android:id="@+id/favorite_icon"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/ic_corazon"
    android:layout_gravity="top"
    app:tint="@color/orange" />

</LinearLayout>
    </androidx.cardview.widget.CardView>
