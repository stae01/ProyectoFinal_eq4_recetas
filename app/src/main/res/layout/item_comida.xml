<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardComida"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imagenComida"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ramen" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreComida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ramen AKai"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/categoriaComida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Sopas"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/etiquetaComida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Saludable"
                app:chipBackgroundColor="@color/orange"
                app:chipCornerRadius="8dp"
                app:chipEndPadding="8dp"
                app:chipStartPadding="8dp"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iconFavorito"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top"
            android:src="@drawable/ic_heart_outline"
            app:tint="@color/orange" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
