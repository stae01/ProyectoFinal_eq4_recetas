<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoPantallas"
    tools:context=".ui.crearRecetas.crearRecetasFragment">

    <TextView
        android:id="@+id/tituloAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Receta"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tituloAgregar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Nombre de la receta"
                android:inputType="text" />

            <EditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:hint="Descripción breve"
                android:inputType="text" />

            <EditText
                android:id="@+id/etIngredientes"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Ingredientes"
                android:inputType="text" />

            <EditText
                android:id="@+id/etPreparacion"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:hint="Preparación"
                android:inputType="textMultiLine" />

            <ImageView
                android:id="@+id/imgReceta"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/input_background"
                android:layout_marginBottom="5dp"
                />

            <Button
                android:id="@+id/btnSeleccionarImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="#FF5722"
                android:background="@drawable/button_orange"
                android:layout_marginBottom="10dp"
                android:text="Seleccionar imagen" />

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="match_parent"
                android:background="@drawable/button_orange"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF5722"
                android:textColor="@color/white"
                android:text="Guardar receta" />
        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>